@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix vitro: <http://vitro.mannlib.cornell.edu/ns/vitro/0.7#> .
@prefix dynapi: <https://vivoweb.org/ontology/vitro-dynamic-api#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <https://vivoweb.org/ontology/vitro-dynamic-api/gesah/export_cultural_object_to_lido/> .
@prefix paramType: <https://vivoweb.org/ontology/vitro-dynamic-api/parameter/type/> .

:procedure
        a                                   dynapi:Procedure ;
        rdfs:label                          "Export cultural object to LIDO"@en-US ;
        dynapi:publicAccess                 "true"^^xsd:boolean ;
        dynapi:hasFirstStep                 :step1 ;
        dynapi:providesParameter            :parameter_validation_errors ;
        dynapi:providesParameter            :parameter_lido_xml ;
#        dynapi:providesParameter            :parameter_cultural_object_graph ;
        dynapi:providesParameter            :parameter_validation_result .
        
:step1
        a                                   dynapi:OperationalStep ;
        rdfs:label                          "Step 1"@en-US ;
        dynapi:hasNextStep                  :step2 ;
        dynapi:hasOperation                 :operation_export_cultural_object_to_lido .
        
:operation_export_cultural_object_to_lido 
        a                                   dynapi:SparqlConstructQuery ;
        rdfs:label                          "Get cultural objects operation"@en-US ;
        dynapi:hasModel                     <https://vivoweb.org/ontology/vitro-dynamic-api/model/full_union> ;
        dynapi:requiresParameter            :parameter_cultural_object_uri ;
        dynapi:sparqlQueryText              """
        PREFIX vitro: <http://vitro.mannlib.cornell.edu/ns/vitro/0.7#>
        PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
        PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
        PREFIX rdfs:  <http://www.w3.org/2000/01/rdf-schema#>
        PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
        PREFIX gesah: <http://ontology.tib.eu/gesah/> 
        CONSTRUCT {
          ?cultural_object rdf:type ?type .

          ?cultural_object xsd:date ?current_date .

          ?cultural_object rdfs:label ?co_label .
          ?cultural_object vitro:mostSpecificType ?most_specific_type .

          ?cultural_object gesah:has_Title ?title_ind .
          ?title_ind gesah:has_title_type ?title_type .
          ?title_type rdfs:label ?title_type_label .
          ?title_ind gesah:title ?title_label .

          ?most_specific_type rdfs:label ?most_specific_type_label .
          ?most_specific_type rdfs:label ?most_specific_type_label .

          ?cultural_object gesah:has_object_category_generic_term ?object_category_generic_term .
          ?object_category_generic_term rdfs:label ?object_category_generic_term_label .
  
          ?cultural_object gesah:has_object_category_narrower_term ?object_category_narrower_term .
          ?object_category_narrower_term rdfs:label ?object_category_narrower_term_label .
          
          ?cultural_object gesah:object_of_inscription ?object_of_inscription .
          ?object_of_inscription rdfs:label ?object_of_inscription_label .
  
          ?cultural_object gesah:current_inventory_number ?current_inv_number .
  
          ?cultural_object gesah:former_inventory_number ?former_inv_number .

          ?cultural_object gesah:has_current_holding_institution ?current_holding_institution .
          ?current_holding_institution rdfs:label ?current_holding_institution_label .

          ?cultural_object gesah:has_digital_representation ?representation .
          ?representation ?representation_p ?representation_o .

          ?representation gesah:digital_image_right_label ?digital_image_right_label .
        }				
		WHERE {
          ?cultural_object rdf:type ?type .

          BIND( now() AS ?current_date ) .

          {
            ?cultural_object vitro:mostSpecificType ?most_specific_type .
            ?most_specific_type rdfs:label ?most_specific_type_label .
          } UNION
          {
            ?cultural_object rdfs:label ?co_label .
          } UNION
          {
            ?cultural_object gesah:has_Title ?title_ind .
            ?title_ind gesah:has_title_type ?title_type .
            ?title_type rdfs:label ?title_type_label .
            ?title_ind gesah:title ?title_label .
          } UNION
          {
            ?cultural_object gesah:has_object_category_generic_term ?object_category_generic_term .
            ?object_category_generic_term rdfs:label ?object_category_generic_term_label .
          } UNION
          {
            ?cultural_object gesah:has_object_category_narrower_term ?object_category_narrower_term .
            ?object_category_narrower_term rdfs:label ?object_category_narrower_term_label .
          } UNION
          {
            ?cultural_object gesah:object_of_inscription ?object_of_inscription .
            ?object_of_inscription rdfs:label ?object_of_inscription_label .
          } UNION
          {
            ?cultural_object gesah:current_inventory_number ?current_inv_number .
          } UNION
          {
            ?cultural_object gesah:former_inventory_number ?former_inv_number .
          } UNION
          {
            ?cultural_object gesah:has_current_holding_institution ?current_holding_institution .
            ?current_holding_institution rdfs:label ?current_holding_institution_label .
          } UNION {
            ?cultural_object gesah:has_digital_representation ?representation .
            { 
              ?representation ?representation_p ?representation_o . } UNION
            { 
              ?representation gesah:digital_image_right ?digital_image_right .
              ?digital_image_right rdfs:label ?digital_image_right_label .
            } 
 
          }
        }
        """ ;
        dynapi:providesParameter            :parameter_cultural_object_graph .

:step2
        a                                   dynapi:OperationalStep ;
        dynapi:hasNextStep                  :step3 ;
        dynapi:hasOperation                 :operation_XMLTranslation .

:operation_XMLTranslation
        a                                   dynapi:XMLTransformation ;
        dynapi:xslt                         :parameter_xml_transformation_rules ;
        dynapi:inputXml                     :parameter_cultural_object_graph ;
        dynapi:outputXml                    :parameter_lido_xml .

:step3
        a                                   dynapi:OperationalStep ;
        dynapi:hasOperation                 :operation_XMLValidation  .

:operation_XMLValidation  
        a                                   dynapi:XMLValidation ;
	    dynapi:xsd                          :parameter_xml_schema_rules ;
        dynapi:inputXml                     :parameter_lido_xml ;
        dynapi:errorMessage                 :parameter_validation_errors;
        dynapi:result                       :parameter_validation_result .

####################################################################################################################################################################

:parameter_cultural_object_uri
        a                                   dynapi:Parameter ;
        dynapi:name                         "cultural_object" ;
        dynapi:hasType                      paramType:uri .

:parameter_validation_result
        a                                   dynapi:Parameter ;
        dynapi:name                         "valid" ;
        dynapi:hasType                      paramType:boolean .

:parameter_xml_schema_rules
        a                                   dynapi:Parameter ;
        dynapi:name                         "xsd" ;
        dynapi:isInternal                   "true"^^xsd:boolean ;
        dynapi:hasType                      paramType:string .
        
:parameter_validation_errors
        a                                   dynapi:Parameter ;
        dynapi:name                         "errors" ;
        dynapi:hasType                      paramType:string .

:parameter_lido_xml
        a                                   dynapi:Parameter ;
        dynapi:name                         "lido" ;
        dynapi:hasType                      paramType:string .

:parameter_xml_transformation_rules
        a                                   dynapi:Parameter ;
        dynapi:isInternal                   "true"^^xsd:boolean ;
        dynapi:name                         "xslt" ;
        dynapi:hasType                      paramType:string .

:parameter_cultural_object_graph
        a                                   dynapi:Model ;
        dynapi:name                         "cultural_object_graph" ;
        dynapi:hasType                      paramType:model .
